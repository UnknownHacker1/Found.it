{
  "name": "foundit",
  "version": "1.0.0",
  "description": "AI-Powered Desktop File Search",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "build": "electron-builder build --win --publish never",
    "build:dir": "electron-builder build --win --dir"
  },
  "keywords": [
    "electron",
    "search",
    "ai",
    "desktop"
  ],
  "author": "",
  "license": "MIT",
  "build": {
    "appId": "com.foundit.app",
    "productName": "Foundit",
    "electronVersion": "28.0.0",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "files": [
      "**/*"
    ],
    "extraResources": [
      {
        "from": "../backend",
        "to": "backend",
        "filter": [
          "**/*",
          "!**/__pycache__/**",
          "!**/dist/**",
          "!**/build/**",
          "!**/*.spec"
        ]
      }
    ]
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "axios": "^1.6.0"
  }
}
